<Window x:Class="MediaCentre01.Pomo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaCentre01"
        mc:Ignorable="d"
        Title="Pomodoro" Height="450" Width="800"
        Loaded="WindowLoaded"
>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Start Working" Height="21" Name="BtnWork" Width="121" Click="BtnWork_OnClick">
        </Button>
        <Button Grid.Row="1" Content="Stop Working" Height="21" Name="BtnStpWork" Width="121" Click="BtnStpWork_OnClick">
        </Button>
    </Grid>
</Window>
